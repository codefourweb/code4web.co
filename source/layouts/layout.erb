<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="expires" content="-1" />

    <title><%= current_page.data.title || "Code4Web - Software Development" %></title>

    <%= stylesheet_link_tag "all" %>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">
    <header class="masthead">
      <div class="container">
        <nav class="navbar navbar-default">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <% link_to 'index.html' do %>
              <%= image_tag 'header-logo.png', class: 'img-responsive' %>
            <% end %>
          </div>
          <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
            <ul class="nav navbar-nav navbar-right">
              <li class="active">
                <%= link_to t('menu.home'), 'index.html' %>
              </li>
              <li>
                <a href="mailto:contato@code4web.com.br"><%= t('menu.contact') %></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= t('menu.language') %> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/">English</a>
                  </li>
                  <li>
                    <a href="/pt-br/">PortuguÃªs</a>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </header>

    <div class="content">
      <%= yield %>
    </div>

    <footer class="mastfoot">
      <div class="container text-center">
        <ul class="nav">
          <li class="grow">
            <% link_to 'https://facebook.com/codefourweb', target: '_blank' do %>
              <i class="fa fa-facebook-square fa-3"></i>
            <% end %>
          </li>
          <li class="grow">
            <% link_to 'https://twitter.com/codefourweb', target: '_blank' do %>
              <i class="fa fa-twitter-square fa-3"></i>
            <% end %>
          </li>
          <li class="grow">
            <% link_to 'https://github.com/codefourweb', target: '_blank' do %>
              <i class="fa fa-github-square fa-3"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </footer>

    <%= javascript_include_tag  "all" %>
  </body>
</html>
